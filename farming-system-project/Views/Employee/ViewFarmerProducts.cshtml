@model IEnumerable<Product>

<div class="container mt-4">
    <h2 class="mb-3">Products</h2>

    <!-- Filter Form -->
    <form method="get" class="mb-4">
        <div class="row g-2">
            <div class="col-md-4">
                <label for="start" class="form-label">Start Date</label>
                <input name="start" type="date" class="form-control" />
            </div>

            <div class="col-md-4">
                <label for="end" class="form-label">End Date</label>
                <input name="end" type="date" class="form-control" />
            </div>

            <div class="col-md-4">
                <label for="category" class="form-label">Category</label>
                <input name="category" type="text" class="form-control" placeholder="Enter Category" />
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Filter</button>
    </form>

    <!-- Product Listing -->
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text"><strong>Category:</strong> @product.Category</p>
                        <p class="card-text"><strong>Production Date:</strong> @product.ProductionDate.ToShortDateString()</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>